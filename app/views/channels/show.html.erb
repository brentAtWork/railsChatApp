<div class="page-header">
	<h1><%= @channel.name %></h1>
</div>
<div class="well channelbox">
	<div class="channelboxcontent" id="channelBoxWell">
		<% if @messages.any? %>
			<%= render @messages %>
		<% end %>
	</div>
</div>
<div>
	<div class="form-group">
		<%= form_for([@channel, @message], :remote => true, :html => {id: "channel_form"}) do |f| %>
			<%= f.text_area :body, class: "form-control channeltextarea", "data-channelid" => @channel.id, "rows" => "3" %>
		<% end %>
	</div>
</div>

<%= subscribe_to channel_path(@channel) %>