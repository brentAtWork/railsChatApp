<% if message.interaction_type == "Conversation" %>
	<li class="<%= self_or_other(message) %>">
		<div class="avatar">
			<img src="http://placehold.it/50x50" />
		</div>
		<div class="chatboxmessagecontent">
			<p><%= message.body %></p>
			<time datetime="<%= message.created_at %>" title="<%= message.created_at.strftime("%d %b %Y at %I:%M%p") %>">
			<%= message_interlocutor(message).username %> • <%= message.created_at.strftime("%H:%M %p") %>
			</time>
		</div>
	</li> 
<% else %>
	<li class="other">
		<div class="avatar">
			<img src="http://placehold.it/50x50" />
		</div>
		<div class="channelboxmessagecontent">
			<p><%= message.body %></p>
			<time datetime="<%= message.created_at %>" title="<%= message.created_at.strftime("%d %b %Y at %I:%M%p") %>">
			<%= User.find_by_id(message[:user_id]).username %> • <%= message.created_at.strftime("%H:%M %p") %>
			</time>
		</div>
	</li> 
<% end %>